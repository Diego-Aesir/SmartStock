@model IEnumerable<Products>

@{
    List<ProductInCart> productInCart = ViewBag.ProductInCart;
    var cartId = ViewBag.CartId;
    var userAdress = ViewBag.Address;
    decimal total = default;

    foreach (var product in Model)
    {
        total += ((@product.Price * (1 - product.Discount)) * productInCart.Find(x => x.ProductId == product.Id).Quantity);
    }
}

@if (ViewBag.Error != null)
{
    <h4 class="text-danger">@ViewBag.Error</h4>
}

<div class="cart-container">
    @foreach (var product in Model)
    {
        <div class="cart-item">
            <p>@product.Title (x @productInCart.Find(x => x.ProductId == product.Id).Quantity)</p>
            <img src="~/uploads/@product.Photo" alt="@product.Title" />
            <span>
                @(((@product.Price * (1 - product.Discount)) * productInCart.Find(x => x.ProductId == product.Id).Quantity).ToString("C"))
            </span>
        </div>
    }
</div>

<h4 style="font-size: 1.4em; color: #28a745; font-weight: bold;">
    Total: @total.ToString("C")
</h4>

<form asp-controller="SalesTransaction" asp-action="FinalizeBuy" method="post">
    <input hidden name="cartId" value="@cartId" />
    <select name="paymentOpt">
        <option value="0">Cash</option>
        <option value="1">Credit Card</option>
        <option value="2">SmartStore Credit</option>
    </select>

    <div class="address-display">
        <h2>Will be delivered on:</h2>
        <p class="user-address">@userAdress</p>
    </div>

    <input type="number" name="discount" step=".01" placeholder="Discount Ticket? E.g: 0.2" />
    <button type="submit">Finalize</button>
</form>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f7f7f7;
    }

    .cart-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .cart-item {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 300px;
        transition: transform 0.3s ease;
    }

        .cart-item:hover {
            transform: scale(1.05);
        }

        .cart-item img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .cart-item p {
            font-size: 1.2em;
            font-weight: bold;
            margin: 10px 0;
        }

        .cart-item span {
            font-size: 1.4em;
            color: #28a745;
            font-weight: bold;
        }

    form {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

        form select,
        form input[type="number"],
        form button {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1em;
        }

        form select {
            background-color: #f9f9f9;
        }

        form input[type="number"] {
            background-color: #fff;
        }

        form button {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
            border: none;
            cursor: pointer;
        }

            form button:hover {
                background-color: #0056b3;
            }

    .address-display {
        margin-top: 20px;
        padding: 10px;
        background-color: #e9f7ef;
        border-radius: 8px;
        border: 1px solid #28a745;
        text-align: center;
    }

        .address-display h2 {
            font-size: 1.2em;
            color: #28a745;
            margin-bottom: 10px;
        }

    .user-address {
        font-size: 1.1em;
        color: #333;
        font-weight: bold;
        margin: 5px 0;
    }
</style>
