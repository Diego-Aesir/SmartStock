@model UserLoginDTO

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center mb-4">Welcome back!</h1>

<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Login" asp-controller="User" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Login" class="btn btn-primary w-100" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4 mx-auto text-center mt-3">
        <a asp-controller="User" asp-action="Register" class="text-primary">Don't have an account? Register here.</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
