@model IEnumerable<ProductCategory>


@foreach(var category in Model) {
    <div class="d-flex align-items-center mb-3" style=" gap: 5px ">
        <h4 class="mb-0">@category.Id</h4>
        <h4 class="mb-0">@category.Title</h4>
        <h4>||</h4>
        <h4 class="mb-0">@category.Description</h4>
        <form method="post" asp-controller="Category" asp-action="DeleteCategory">
            <input type="hidden" name="productCategoryId" value="@category.Id" />
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
    </div>
}