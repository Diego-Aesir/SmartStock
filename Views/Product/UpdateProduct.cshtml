@model ProductIForm

@{
    ViewData["Title"] = "Update Product";
}

<h1 class="page-title">Update Product</h1>
<hr />
<div class="product-form-container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="UpdateProduct" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-4">
                    <label asp-for="Title" class="control-label">Product Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter the product title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Description" class="control-label">Product Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Enter a brief description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="CategoryId" class="control-label">Category</label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.Title</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="StockId" class="control-label">Stock</label>
                    <select asp-for="StockId" class="form-control">
                        @foreach (var stock in ViewBag.Stocks)
                        {
                            <option value="@stock.Id">@stock.Name</option>
                        }
                    </select>
                    <span asp-validation-for="StockId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Price" class="control-label">Price</label>
                    <input type="number" asp-for="Price" class="form-control" step=".01" placeholder="Enter the product price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="QuantityInStock" class="control-label">Quantity in Stock</label>
                    <input asp-for="QuantityInStock" class="form-control" placeholder="Enter quantity available in stock" />
                    <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Discount" class="control-label">Discount</label>
                    <input type="number" asp-for="Discount" class="form-control" step=".01" placeholder="Enter the product discount. E.g 0.20" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Photo" class="control-label">Photo</label>
                    <input type="file" asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <input type="submit" value="Save Changes" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .page-title {
        font-size: 32px;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-bottom: 30px;
    }

    .product-form-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group input, .form-group select {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

            .form-group input[type="number"] {
                width: 100%;
            }

            .form-group input[type="submit"] {
                font-size: 18px;
                padding: 12px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                .form-group input[type="submit"]:hover {
                    background-color: #0056b3;
                }

        .form-group span.text-danger {
            font-size: 14px;
            color: red;
        }
</style>
